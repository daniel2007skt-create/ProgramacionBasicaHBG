#include <stdio.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main() {
	int n;
	int i,j;
	int a;
	printf("----------------------Matriz Diagonal----------------------\n");
	printf("defina el tamano de la matriz de mismas cantidades de filas que columnas:");
	scanf("%d" , &n);
	printf("\n\nmatriz de %d por %d",n ,n);
	int md1[n][n];
	for(i = 0; i<n; i++){
		for(j = 0; j<n; j++){
		printf("\nmatriz[%d][%d]:",i ,j);
		scanf("%d", &md1[i][j]);
		}
	}
	printf("la matriz es:\n");
//	printf("\n");
	for(i = 0; i<n; i++){
		for(j = 0; j<n; j++){
		printf("%d  ",md1[i][j]);
			}
	printf("\n");
		}
		printf("la matriz diagonal es:\n");
		printf("\n");
	for(i = 0; i<n; i++){
		for(j = 0; j<n; j++){
			if(i==j){
				printf("0 ");
			}else
		printf("%d ",md1[i][j]);
			}
	printf("\n");
		}	
	int md2[n][n];
		for(i = 0; i < n; i++) {
    		for(j = 0; j < n; j++) {
        if (i > j)
            md2[i][j] = md1[i][j] + md1[j][i];
        else
            md2[i][j] = 0;
    }
}
		printf("\n");
		printf("la matriz triangular superior es:\n");
		printf("\n");
for(i = 0; i < n; i++) {
    for(j = 0; j < n; j++) {
        printf("%d ", md2[i][j]);
    }
    printf("\n");
	}
	printf("\n:=)\n");
return 0;
}
