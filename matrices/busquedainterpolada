#include <stdio.h>

int main() {
    int N;
    int i;
    int j;
    int aux;
    int numeroBuscar;
    int inicio;
    int fin;
    int pos;
    int posicion = -1;

    printf("Ingrese el tamano del vector: ");
    scanf("%d", &N);

    int vector[N];

    for(i = 0; i < N; i++) {
        printf("Elemento %d: ", i);
        scanf("%d", &vector[i]);
    }

    for(i = 0; i < N - 1; i++) {
        for(j = 0; j < N - 1 - i; j++) {
            if(vector[j] > vector[j + 1]) {
                aux = vector[j];
                vector[j] = vector[j + 1];
                vector[j + 1] = aux;
            }
        }
    }

    printf("Numero a buscar: ");
    scanf("%d", &numeroBuscar);

    inicio = 0;
    fin = N - 1;

    while(inicio <= fin && numeroBuscar >= vector[inicio] && numeroBuscar <= vector[fin]) {
        pos = inicio + ((numeroBuscar - vector[inicio]) * (fin - inicio)) / (vector[fin] - vector[inicio]);

        if(vector[pos] == numeroBuscar) {
            posicion = pos;
            break;
        }

        if(vector[pos] < numeroBuscar) {
            inicio = pos + 1;
        } else {
            fin = pos - 1;
        }
    }

    if(posicion == -1) {
        printf("No encontrado\n");
    } else {
        printf("Encontrado en posicion %d\n", posicion);
    }

    return 0;
}
