#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i, j;

    printf("Ingrese la dimension de la matriz: ");
    scanf("%d", &n);

    int matriz[n][n];
    int maximos[n];

    for(i = 0; i < n; i++) {
        for(j = 0; j < n; j++) {
            printf("Ingrese el valor en la posicion [%d][%d]: ", i, j);
            scanf("%d", &matriz[i][j]);
        }
    }

    for(i = 0; i < n; i++) {
        maximos[i] = matriz[i][0];
        for(j = 1; j < n; j++) {
            if(matriz[i][j] > maximos[i]) {
                maximos[i] = matriz[i][j];
            }
        }
    }

    printf("\nMatriz ingresada:\n");
    for(i = 0; i < n; i++) {
        for(j = 0; j < n; j++) {
            printf("%d ", matriz[i][j]);
        }
        printf("\n");
    }

    printf("\nVector de maximos:\n");
    for(i = 0; i < n; i++) {
        printf("%d ", maximos[i]);
    }

    printf("\n");

    return 0;
}
